{
  "Environment": "Development",
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "Name": "Console",
                "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message} {NewLine}{Exception}",
                "restrictedToMinimumLevel": "Verbose"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "C:\\Temp\\Logs\\Codeit\\Identity-.txt",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": "true",
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.ffffff zzz} {Level:u3} {MachineName} {ProcessId} {Level:u3}] {SourceContext}: {Message} Scope:{Scope}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithExceptionDetails", "DebuggerAttached" ],
    "Properties": {
      "Environment": "Development"
    }
  },
  "DALSection": {
    "UseDatabase": true,
    "DatabaseName": "IdentityDB",
    "DatabaseConnection": "Server=(localdb)\\MSSQLLocalDB;Database=Codeit.Identity;Trusted_Connection=True;"
  },
  "EmailSection": {
    "SendGridUser":"",
    "SendGridApiKey":"",
    "SendGridSubject": "",
    "SendGridFromName": "",
    "SendGridFromEmail": ""
  }
}